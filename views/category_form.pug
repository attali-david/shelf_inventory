extends layout

block content
  h1#title= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text' placeholder='Formula Name' name='name' required='true' value=(undefined===category ? '' : category.name))
    br
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' placeholder='Write a Description' name='description' required='true' value=(undefined===category ? '' : category.description))
    br
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg